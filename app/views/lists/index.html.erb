<div class="d-flex navbar-lewagon align-items-center">
  <div class="p-2 flex-grow-1"><i class="fa-solid fa-video"></i></div>
  <div class="p-2"><%= link_to "My lists", lists_path %></div>
  <div class="p-2"><%= link_to "New list", new_list_path %></div>
</div>

<div class="banner mb-3">
  <div class="container">
    <h1>Save <strong>YOUR</strong> favorite <strong>movies</strong>!</h1>
    <p><%= link_to "Create list", new_list_path, class: "btn btn-info" %></p>
  </div>
</div>

<div class="cards mb-3">
  <% @lists.each do |list| %>
    <div class="card">
      <%# This creates a url page from random movie in a list - ToDO: have if method if list is empty %>
      <%= image_tag ("https://image.tmdb.org/t/p/original" + list.movies.sample["poster_url"]) %>
      <div class="card-body text-center">
        <h5 class="card-title"><%= link_to list.name, list_path(list), class: "btn btn-info rounded-3" %></h5>
        <%= link_to "Delete",
            list_path(list),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
    </div>
  <% end %>
</div>
